@model IEnumerable<Spice.Models.Category>
@{
    ViewData["Title"] = "Index";
}

<h>Index</h>

<div class="row">
    <div class="col-6">

        <h1 class="text-info">Category List</h1>
    </div>

    <div class="col-6 text-right">

        <partial name="_CreateButtonPartial" />
    </div>
</div>
    <br />
    <table class="table table-bordered table-hover"  >

        <tr>
            <th>
                 Name
            </th>

            <th>Dlete</th>

        </tr>
        @foreach(var item in Model)
        {
    <tr>
        <td>
            @item.Name
        </td>
        
        <td>

            <a asp-action="Details" class="btn btn-info" asp-route-id="@item.Id">
                <i class="">Detail</i>
            </a>
            <a asp-action="Delete" asp-controller="Category" class="btn btn-danger" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete this record?')">
                <i class="fa fa-trash">Delete</i>
            </a>
        </td>

        
    </tr>

        }

    </table>


