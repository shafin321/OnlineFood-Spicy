
@model IEnumerable<Spice.Models.MenuItem>
@{
    ViewData["Title"] = "Index";
    var photoPath = "~/images/" + Model;
}

<h>Index</h>

<div class="form-group">
    <a asp-action="Create" asp-controller="MenuItem">Create Menu</a>

</div>

<div class="row">
    <div class="col-6">

        <h1 class="text-info">Menu Item List</h1>
    </div>

    <div class="col-6 text-right">

        <partial name="_CreateButtonPartial" />
    </div>
</div>
<br />
<table class="table table-bordered table-hover">

    <tr>
        
        <th>
            Name
        </th>
        <th>Description</th>
        <th>Cateogty Name</th>
        <th>Price</th>
        <th>Image</th>


        <th>Dlete</th>

    </tr>
    @foreach (var item in Model)
    {
        var Image = "~/images/" + (item.Image);
        <tr>
            <td>
                @item.Name
            </td>
            <td>@item.Description</td>
            <td> @item.Category.Name</td>
            <td>@item.Price</td>
            <td>
                <img class="card-img-top imageThumbnail" src="@Image"
                     asp-append-version="true" />

            </td>
            <td>

                <a asp-action="Details" class="btn btn-info" asp-route-id="@item.Id">
                    <i class="">Detail</i>
                </a>
                <a asp-action="Delete" asp-controller="LeaveType" class="btn btn-danger" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete this record?')">
                    <i class="fa fa-trash">Delete</i>
                </a>
            </td>


        </tr>

    }

</table>
